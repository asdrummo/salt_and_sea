<%= form_for @order do |f| %>
 
  <% if @order.express_token.blank? %>
    token is blank
  <% else %>
    <%= f.hidden_field :express_token %>
    <p><strong>PayPal Buyer Name:</strong> <%=h @order.first_name %> <%=h @order.last_name %><br />
	<strong>Total amount to be charged via PayPal:</strong> <%= number_to_currency(@cart.total_price) %> </p>
    <p><%= render(:partial => 'orders/partials/cart') %></p>
  <% end %>
  <p><%= f.submit "Complete Order", id: "button_id", class: "button", data: {disable_with: "Submitting..."} %></p>

<% end %>