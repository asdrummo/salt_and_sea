<h1>Listing share_dates</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
   <th>Created At</th>

  </tr>

<% @share_dates.each do |share_date| %>
  <tr>
	<td><%= link_to Customer.find(share_date.customer_id).name, customer_path(share_date.customer_id) %></td>
    <td><%= share_date.date %></td>
    <td><%= link_to 'Show', share_date %></td>
    <td><%= link_to 'Edit', edit_share_date_path(share_date) %></td>
    <td><%= link_to 'Destroy', share_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td><%= share_date.created_at.strftime("%B %d, %Y at %I:%M %p %Z") %></td>


  </tr>
<% end %>
</table>

