<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :drop_location_id %><br />
	<%= f.select :drop_location_id, options_from_collection_for_select(@drop_locations, "id", :display_name, @customer.drop_location_id) %>
  </div>

  <div class="field">
    <%= f.label :account_status %><br />
    <%= f.select :account_status,  options_for_select([["active", "active"], ["inactive", "inactive"]], @customer.account_status) %>
  </div>

  <div class="field">
    <%= f.label :mailing_list %><br />
    <%= f.select :mailing_list,  options_for_select([["yes", "yes"], ["no", "no"]]) %>
  </div>
  <div class="field">
    <%= f.label :contact_method %><br />
    <%= f.select :contact_method,  options_for_select([["email", "email"], ["phone", "phone"]]) %>
  </div>
  <div class="field">
    <%= f.label :share_type %><br />
    <%= f.select :share_type,  options_from_collection_for_select(ShareType.all, "share_type", "share_type", @customer.share_type) %>
  </div>

  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "30x10" %>
  </div>
  <div class="field">
    <%= f.label :order_count %><br />
    <%= f.text_field :order_count %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
